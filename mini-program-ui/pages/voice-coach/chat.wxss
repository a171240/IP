.page {
  min-height: 100vh;
  background: #20a85e;
  display: flex;
  flex-direction: column;
}

.topbar {
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
}

.top-left {
  padding: 10rpx 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.55);
  border-radius: 999rpx;
  font-size: 28rpx;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.chat {
  flex: 1;
  padding: 22rpx 20rpx 10rpx;
}

.row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 18rpx;
}

.row.left {
  justify-content: flex-start;
}

.row.right {
  justify-content: flex-end;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.avatar-customer {
  background: rgba(255, 255, 255, 0.25);
  color: #ffffff;
}

.avatar-beautician {
  background: rgba(0, 0, 0, 0.18);
  color: #ffffff;
}

.bubble {
  max-width: 560rpx;
  border-radius: 22rpx;
  padding: 18rpx 18rpx 14rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.bubble-customer {
  background: #c9f3d0;
}

.bubble-beautician {
  background: #ffffff;
}

.voice {
  margin-bottom: 10rpx;
}

.voice-bar {
  align-self: flex-start;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(0, 0, 0, 0.06);
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
}

.voice-label {
  font-size: 26rpx;
  color: #0e3c20;
}

.voice-dur {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.msg-text {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.86);
  line-height: 44rpx;
  white-space: pre-wrap;
}

.msg-actions {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
}

.mini-btn {
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: rgba(32, 168, 94, 0.12);
  color: #1a8a50;
  border: 2rpx solid rgba(32, 168, 94, 0.25);
}

.mini-btn.ghost {
  background: rgba(0, 0, 0, 0.04);
  color: rgba(0, 0, 0, 0.6);
  border: 2rpx solid rgba(0, 0, 0, 0.08);
}

.suggest-box {
  margin-top: 14rpx;
  padding: 16rpx;
  border-radius: 18rpx;
  background: rgba(32, 168, 94, 0.08);
  border: 2rpx solid rgba(32, 168, 94, 0.16);
}

.suggest-title,
.polished-title {
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.8);
  margin-bottom: 10rpx;
}

.suggest-item {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.72);
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.polished {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.82);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.typing {
  display: flex;
  justify-content: center;
  padding: 16rpx 0 24rpx;
}

.typing-pill {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.95);
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.footer {
  padding: 14rpx 16rpx calc(14rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.94);
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.hint-btn {
  width: 180rpx;
  border-radius: 999rpx;
  background: rgba(32, 168, 94, 0.14);
  color: #187f49;
  border: 2rpx solid rgba(32, 168, 94, 0.22);
  font-size: 28rpx;
}

.record-btn {
  flex: 1;
  border-radius: 999rpx;
  background: #ffffff;
  color: rgba(0, 0, 0, 0.85);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  height: 86rpx;
  line-height: 86rpx;
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 90;
}

.end-modal {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: 24rpx;
  z-index: 100;
  background: #ffffff;
  border-radius: 26rpx;
  padding: 22rpx;
}

.end-title {
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 18rpx;
}

.end-primary {
  width: 100%;
  border-radius: 999rpx;
  background: #20a85e;
  color: #ffffff;
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin-bottom: 14rpx;
}

.end-secondary {
  width: 100%;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  color: rgba(0, 0, 0, 0.7);
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
}

.hint-sheet {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  z-index: 100;
  background: #ffffff;
  border-radius: 26rpx;
  padding: 20rpx;
}

.hint-header {
  margin-bottom: 14rpx;
}

.hint-title {
  font-size: 30rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.86);
}

.hint-sub {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}

.hint-body {
  padding: 14rpx 14rpx 10rpx;
  background: rgba(32, 168, 94, 0.08);
  border-radius: 18rpx;
  border: 2rpx solid rgba(32, 168, 94, 0.14);
}

.hint-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.78);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.hint-points {
  margin-top: 12rpx;
}

.hint-point {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.72);
  line-height: 40rpx;
}

.hint-close {
  margin-top: 14rpx;
  width: 100%;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  color: rgba(0, 0, 0, 0.7);
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
}

