.page {
  min-height: 100vh;
  background: #20a85e;
  display: flex;
  flex-direction: column;
}

.topbar {
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
}

.top-left {
  padding: 10rpx 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.55);
  border-radius: 999rpx;
  font-size: 28rpx;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.chat {
  flex: 1;
  padding: 22rpx 20rpx 10rpx;
}

.row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 18rpx;
}

.row.left {
  justify-content: flex-start;
}

.row.right {
  justify-content: flex-end;
}

.msg {
  max-width: 560rpx;
  display: flex;
  flex-direction: column;
}

.msg-left {
  align-items: flex-start;
}

.msg-right {
  align-items: flex-end;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.avatar-customer {
  background: rgba(255, 255, 255, 0.25);
  color: #ffffff;
}

.avatar-beautician {
  background: rgba(0, 0, 0, 0.18);
  color: #ffffff;
}

.bubble {
  border-radius: 22rpx;
  padding: 18rpx 18rpx 14rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.bubble-customer {
  background: #c9f3d0;
}

.bubble-beautician {
  background: #ffffff;
}

.msg-right .bubble {
  align-items: flex-end;
}

.voice-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.voice-bubble {
  position: relative;
  height: 88rpx;
  border-radius: 20rpx;
  padding: 0 18rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.08);
}

.voice-customer {
  background: #c9f3d0;
}

.voice-beautician {
  background: #ffffff;
}

.voice-tail {
  position: absolute;
  top: 32rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}

.voice-customer .voice-tail.tail-left {
  left: -10rpx;
  border-right: 12rpx solid #c9f3d0;
}

.voice-beautician .voice-tail.tail-right {
  right: -10rpx;
  border-left: 12rpx solid #ffffff;
}

.voice-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content-left {
  flex-direction: row;
}

.content-right {
  flex-direction: row-reverse;
}

.voice-dur-text {
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.72);
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
}

.wave {
  width: 4rpx;
  height: 10rpx;
  border-radius: 2rpx;
  background: rgba(0, 0, 0, 0.55);
  opacity: 0.9;
}

.voice-playing .wave {
  animation: voiceWave 1s ease-in-out infinite;
}

.voice-playing .wave.w2 {
  animation-delay: 0.12s;
}

.voice-playing .wave.w3 {
  animation-delay: 0.24s;
}

@keyframes voiceWave {
  0% {
    height: 8rpx;
    opacity: 0.65;
  }
  50% {
    height: 18rpx;
    opacity: 1;
  }
  100% {
    height: 8rpx;
    opacity: 0.65;
  }
}

.trans-btn {
  height: 60rpx;
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.25);
  border: 2rpx solid rgba(0, 0, 0, 0.18);
  display: flex;
  align-items: center;
}

.trans-btn:active {
  opacity: 0.85;
}

.trans-btn-inner {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.trans-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #ff3b30;
}

.trans-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
}

.msg-text {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.86);
  line-height: 44rpx;
  white-space: pre-wrap;
}

.meta-row {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.meta-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.meta-action {
  display: inline-block;
  font-size: 26rpx;
  line-height: 34rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.22);
  border: 2rpx solid rgba(255, 255, 255, 0.28);
  color: rgba(255, 255, 255, 0.96);
}

.meta-action:active {
  opacity: 0.85;
}

.meta-danger {
  background: rgba(0, 0, 0, 0.12);
  border-color: rgba(0, 0, 0, 0.18);
}

.meta-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.88);
}

.text-card {
  margin-top: 10rpx;
  padding: 16rpx;
  border-radius: 18rpx;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.86);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.card-customer {
  background: rgba(201, 243, 208, 0.95);
}

.card-beautician {
  background: rgba(255, 255, 255, 0.95);
}

.suggest-card {
  margin-top: 10rpx;
  padding: 16rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 2rpx solid rgba(32, 168, 94, 0.18);
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.08);
}

.suggest-loading {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
}

.suggest-title,
.polished-title {
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.8);
  margin-bottom: 10rpx;
}

.suggest-item {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.72);
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.polished {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.82);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.typing {
  display: flex;
  justify-content: center;
  padding: 16rpx 0 24rpx;
}

.typing-pill {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.95);
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.footer {
  padding: 14rpx 16rpx calc(14rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.94);
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.hint-btn-icon {
  width: 86rpx;
  height: 86rpx;
  min-height: 86rpx;
  padding: 0;
  border-radius: 43rpx;
  background: #e7f3eb;
  border: 2rpx solid #b9d9c7;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hint-btn-icon::after {
  border: none;
}

.hint-icon-inner {
  width: 54rpx;
  height: 54rpx;
  border-radius: 27rpx;
  background: #149457;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 -3rpx 8rpx rgba(0, 0, 0, 0.15);
}

.bulb-icon {
  width: 28rpx;
  height: 34rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.bulb-head {
  width: 24rpx;
  height: 20rpx;
  border: 3rpx solid #ffffff;
  border-bottom: 0;
  border-radius: 14rpx 14rpx 8rpx 8rpx;
  box-sizing: border-box;
}

.bulb-neck {
  width: 12rpx;
  height: 5rpx;
  margin-top: 1rpx;
  background: #ffffff;
  border-radius: 3rpx;
}

.bulb-base {
  width: 14rpx;
  height: 7rpx;
  margin-top: 2rpx;
  border-radius: 3rpx;
  background: #ffffff;
}

.record-btn {
  flex: 1;
  border-radius: 999rpx;
  background: #ffffff;
  color: rgba(0, 0, 0, 0.85);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  height: 86rpx;
  line-height: 86rpx;
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 90;
}

.end-modal {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: 24rpx;
  z-index: 100;
  background: #ffffff;
  border-radius: 26rpx;
  padding: 22rpx;
}

.end-title {
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 18rpx;
}

.end-primary {
  width: 100%;
  border-radius: 999rpx;
  background: #20a85e;
  color: #ffffff;
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin-bottom: 14rpx;
}

.end-secondary {
  width: 100%;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  color: rgba(0, 0, 0, 0.7);
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
}

.hint-sheet {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  z-index: 100;
  background: #ffffff;
  border-radius: 26rpx;
  padding: 20rpx;
}

.hint-header {
  margin-bottom: 14rpx;
}

.hint-title {
  font-size: 30rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.86);
}

.hint-sub {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}

.hint-body {
  padding: 14rpx 14rpx 10rpx;
  background: rgba(32, 168, 94, 0.08);
  border-radius: 18rpx;
  border: 2rpx solid rgba(32, 168, 94, 0.14);
}

.hint-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.78);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.hint-points {
  margin-top: 12rpx;
}

.hint-point {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.72);
  line-height: 40rpx;
}

.hint-close {
  margin-top: 14rpx;
  width: 100%;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  color: rgba(0, 0, 0, 0.7);
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
}
