@import "theme.wxss";

page {
  position: fixed;
  inset: 0;
  height: 100vh;
  overflow: hidden;
}

.page {
  height: 100vh;
  background-color: var(--vc-bg);
  background-image:
    radial-gradient(120% 120% at 100% -10%, rgba(229, 211, 179, 0.12) 0%, rgba(5, 5, 7, 0) 58%),
    radial-gradient(120% 120% at -10% 20%, rgba(245, 243, 255, 0.08) 0%, rgba(5, 5, 7, 0) 60%),
    linear-gradient(180deg, #050507 0%, #0a0a0e 55%, #050507 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.topbar {
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: var(--vc-text);
}

.top-left {
  padding: 10rpx 18rpx;
  border: 2rpx solid var(--vc-border-strong);
  border-radius: 999rpx;
  font-size: 28rpx;
  color: var(--vc-gold);
  background: rgba(255, 255, 255, 0.02);
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.chat {
  flex: 1;
  padding: 22rpx 20rpx 10rpx;
  overflow: hidden;
}

.row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 18rpx;
}

.row.left {
  justify-content: flex-start;
}

.row.right {
  justify-content: flex-end;
}

.msg {
  max-width: 620rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.msg-left {
  align-items: flex-start;
}

.msg-right {
  align-items: flex-end;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.avatar-customer {
  background: rgba(255, 255, 255, 0.12);
  color: var(--vc-text);
}

.avatar-beautician {
  background: rgba(149, 236, 105, 0.22);
  color: var(--vc-success);
}

/* Non-audio fallback bubble */
.bubble {
  border-radius: 22rpx;
  padding: 18rpx 18rpx 14rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.24);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.bubble-customer {
  background: var(--vc-bubble-other);
  color: var(--vc-bubble-other-text);
}

.bubble-beautician {
  background: var(--vc-bubble-self);
  color: var(--vc-bubble-self-text);
}

.msg-right .bubble {
  align-items: flex-end;
}

/* Voice bubble row */
.voice-row {
  width: 100%;
  display: flex;
}

.voice-bubble {
  position: relative;
  height: 88rpx;
  border-radius: 20rpx;
  padding: 0 18rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.28);
}

.voice-customer {
  background: var(--vc-bubble-other);
  border: 1rpx solid rgba(255, 255, 255, 0.07);
  margin-right: auto;
}

.voice-beautician {
  background: var(--vc-bubble-self);
  border: 1rpx solid rgba(94, 170, 60, 0.35);
  margin-left: auto;
}

.voice-tail {
  position: absolute;
  top: 32rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}

.voice-customer .voice-tail.tail-left {
  left: -10rpx;
  border-right: 12rpx solid var(--vc-bubble-other);
}

.voice-beautician .voice-tail.tail-right {
  right: -10rpx;
  border-left: 12rpx solid var(--vc-bubble-self);
}

.voice-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content-left {
  flex-direction: row;
}

.content-right {
  flex-direction: row-reverse;
}

.voice-dur-text {
  font-size: 30rpx;
  font-weight: 700;
}

.voice-customer .voice-dur-text {
  color: var(--vc-bubble-other-text);
}

.voice-beautician .voice-dur-text {
  color: var(--vc-bubble-self-text);
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
}

.wave {
  width: 4rpx;
  height: 10rpx;
  border-radius: 2rpx;
  opacity: 0.9;
}

.voice-customer .wave {
  background: rgba(242, 243, 247, 0.88);
}

.voice-beautician .wave {
  background: rgba(30, 42, 18, 0.78);
}

.voice-playing .wave {
  animation: voiceWave 1s ease-in-out infinite;
}

.voice-playing .wave.w2 {
  animation-delay: 0.12s;
}

.voice-playing .wave.w3 {
  animation-delay: 0.24s;
}

.voice-empty {
  min-width: 220rpx;
  width: auto !important;
}

.voice-empty-text {
  font-size: 28rpx;
  color: var(--vc-bubble-other-text);
  opacity: 0.92;
  line-height: 1;
}

.voice-empty-failed {
  border-color: rgba(255, 126, 126, 0.4);
  box-shadow: 0 10rpx 24rpx rgba(255, 70, 70, 0.12);
}

@keyframes voiceWave {
  0% {
    height: 8rpx;
    opacity: 0.65;
  }
  50% {
    height: 18rpx;
    opacity: 1;
  }
  100% {
    height: 8rpx;
    opacity: 0.65;
  }
}

/* Transcript action */
.trans-btn {
  height: 60rpx;
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: var(--vc-trans-pill);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.trans-btn:active {
  opacity: 0.86;
}

.trans-btn-inner {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.trans-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: var(--vc-trans-dot);
}

.trans-text {
  font-size: 26rpx;
  color: var(--vc-text-muted);
}

.msg-text {
  font-size: 30rpx;
  color: var(--vc-text);
  line-height: 44rpx;
  white-space: pre-wrap;
}

.bubble-customer .msg-text {
  color: var(--vc-bubble-other-text);
}

.bubble-beautician .msg-text {
  color: var(--vc-bubble-self-text);
}

.op-row {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.op-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.op-actions-left {
  justify-content: flex-start;
}

.op-actions-right {
  justify-content: flex-end;
  margin-left: auto;
}

.meta-action {
  display: inline-block;
  font-size: 26rpx;
  line-height: 34rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(21, 21, 29, 0.86);
  border: 2rpx solid rgba(229, 211, 179, 0.24);
  color: var(--vc-text-muted);
}

.meta-action:active {
  opacity: 0.85;
}

.meta-danger {
  border-color: rgba(255, 88, 88, 0.35);
  color: #ffb3b3;
}

.meta-retry {
  border-color: rgba(149, 236, 105, 0.35);
  color: #b9f39c;
}

.meta-hint {
  font-size: 26rpx;
  color: var(--vc-text-muted);
  white-space: nowrap;
}

.text-card {
  width: 100%;
  padding: 16rpx;
  border-radius: 18rpx;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.28);
  font-size: 28rpx;
  line-height: 44rpx;
  word-break: break-word;
  white-space: pre-wrap;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.card-customer {
  background: rgba(42, 42, 53, 0.95);
  color: var(--vc-bubble-other-text);
}

.card-beautician {
  background: rgba(149, 236, 105, 0.16);
  color: var(--vc-text);
  border-color: rgba(149, 236, 105, 0.3);
}

.suggest-card {
  margin-top: 10rpx;
  padding: 16rpx;
  border-radius: 18rpx;
  background: rgba(21, 21, 29, 0.92);
  border: 2rpx solid var(--vc-border);
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.28);
}

.suggest-loading {
  font-size: 28rpx;
  color: var(--vc-text-muted);
}

.suggest-title,
.polished-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--vc-gold);
  margin-bottom: 10rpx;
}

.suggest-item {
  font-size: 28rpx;
  color: var(--vc-text);
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.polished {
  font-size: 28rpx;
  color: var(--vc-text);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.typing {
  display: flex;
  justify-content: center;
  padding: 16rpx 0 24rpx;
}

.typing-pill {
  background: rgba(21, 21, 29, 0.9);
  color: var(--vc-text-muted);
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.footer {
  padding: 14rpx 16rpx calc(14rpx + env(safe-area-inset-bottom));
  background: rgba(10, 10, 14, 0.92);
  border-top: 1rpx solid var(--vc-border);
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.hint-btn-icon {
  width: 86rpx;
  height: 86rpx;
  min-height: 86rpx;
  padding: 0;
  border-radius: 43rpx;
  background: var(--vc-surface-2);
  border: 2rpx solid var(--vc-border);
  display: flex;
  align-items: center;
  justify-content: center;
}

.hint-btn-icon::after {
  border: none;
}

.hint-icon-inner {
  width: 54rpx;
  height: 54rpx;
  border-radius: 27rpx;
  background: #149457;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 -3rpx 8rpx rgba(0, 0, 0, 0.22);
}

.bulb-icon {
  width: 28rpx;
  height: 34rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.bulb-head {
  width: 24rpx;
  height: 20rpx;
  border: 3rpx solid #ffffff;
  border-bottom: 0;
  border-radius: 14rpx 14rpx 8rpx 8rpx;
  box-sizing: border-box;
}

.bulb-neck {
  width: 12rpx;
  height: 5rpx;
  margin-top: 1rpx;
  background: #ffffff;
  border-radius: 3rpx;
}

.bulb-base {
  width: 14rpx;
  height: 7rpx;
  margin-top: 2rpx;
  border-radius: 3rpx;
  background: #ffffff;
}

.record-btn {
  flex: 1;
  border-radius: 999rpx;
  background: rgba(21, 21, 29, 0.96);
  color: var(--vc-text);
  border: 2rpx solid var(--vc-border);
  font-size: 32rpx;
  height: 86rpx;
  line-height: 86rpx;
}

.record-btn.is-recording {
  background: rgba(30, 38, 24, 0.98);
  border-color: rgba(149, 236, 105, 0.45);
  color: #e8ffd8;
}

.record-btn.is-canceling {
  background: rgba(57, 24, 24, 0.98);
  border-color: rgba(255, 95, 95, 0.45);
  color: #ffd9d9;
}

.record-preview {
  padding: 8rpx 24rpx 12rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: var(--vc-text-muted);
  border-top: 1rpx solid rgba(229, 211, 179, 0.08);
  background: rgba(10, 10, 14, 0.92);
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.56);
  z-index: 90;
}

.end-modal {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: 24rpx;
  z-index: 100;
  background: var(--vc-surface);
  border: 2rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 22rpx;
}

.end-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--vc-text);
  margin-bottom: 18rpx;
}

.end-primary {
  width: 100%;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #dcc7a6 0%, #f1e3c6 50%, #c1a076 100%);
  color: #1a1510;
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin-bottom: 14rpx;
}

.end-secondary {
  width: 100%;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.02);
  color: var(--vc-text-muted);
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
}

.hint-sheet {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  z-index: 100;
  background: var(--vc-surface);
  border: 2rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 20rpx;
}

.hint-header {
  margin-bottom: 14rpx;
}

.hint-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--vc-gold);
}

.hint-sub {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: var(--vc-text-muted);
}

.hint-body {
  padding: 14rpx 14rpx 10rpx;
  background: rgba(149, 236, 105, 0.08);
  border-radius: 18rpx;
  border: 2rpx solid rgba(149, 236, 105, 0.2);
}

.hint-text {
  font-size: 28rpx;
  color: var(--vc-text);
  line-height: 40rpx;
  white-space: pre-wrap;
}

.hint-points {
  margin-top: 12rpx;
}

.hint-point {
  font-size: 28rpx;
  color: var(--vc-text-muted);
  line-height: 40rpx;
}

.hint-close {
  margin-top: 14rpx;
  width: 100%;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.02);
  color: var(--vc-text-muted);
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
}
