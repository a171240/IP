.page {
  min-height: 100vh;
  background: #20a85e;
  display: flex;
  flex-direction: column;
}

.seg {
  margin: 18rpx auto 10rpx;
  background: rgba(255, 255, 255, 0.18);
  border-radius: 999rpx;
  padding: 6rpx;
  display: flex;
  width: 320rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  color: rgba(255, 255, 255, 0.88);
  font-size: 28rpx;
  padding: 10rpx 0;
  border-radius: 999rpx;
}

.seg-item.active {
  background: #ffffff;
  color: rgba(0, 0, 0, 0.78);
  font-weight: 800;
}

.content {
  flex: 1;
  padding: 0 18rpx;
}

.headline {
  color: rgba(255, 255, 255, 0.95);
  font-size: 34rpx;
  font-weight: 800;
  padding: 16rpx 6rpx;
}

.score-card {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 18rpx 16rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.score-left {
  flex: 1;
}

.score-label {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.score-line {
  margin-top: 6rpx;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.score {
  font-size: 64rpx;
  font-weight: 900;
  color: #20a85e;
  line-height: 1;
}

.score-suffix {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.radar {
  width: 280px;
  height: 280px;
}

.dims {
  margin-top: 14rpx;
  background: #ffffff;
  border-radius: 26rpx;
  padding: 16rpx;
}

.dim-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}

.dim-row:last-child {
  border-bottom: none;
}

.dim-name {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.78);
  font-weight: 700;
}

.dim-stars {
  font-size: 26rpx;
  color: #f4b000;
}

.summary {
  margin-top: 14rpx;
  background: rgba(255, 255, 255, 0.22);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 26rpx;
  padding: 14rpx 16rpx;
}

.summary-line {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 42rpx;
  margin-bottom: 10rpx;
}

.summary-line:last-child {
  margin-bottom: 0;
}

.tabs {
  margin-top: 14rpx;
  white-space: nowrap;
}

.tab {
  display: inline-block;
  padding: 14rpx 18rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.18);
  color: rgba(255, 255, 255, 0.92);
  font-size: 28rpx;
}

.tab.active {
  background: #ffffff;
  color: rgba(0, 0, 0, 0.78);
  font-weight: 800;
}

.tab-body {
  margin-top: 12rpx;
}

.tab-title {
  padding: 6rpx 6rpx 10rpx;
  font-size: 34rpx;
  font-weight: 900;
  color: rgba(255, 255, 255, 0.95);
}

.metric-card,
.qa-card {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 16rpx;
  margin-bottom: 14rpx;
}

.metric-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.metric-name {
  font-size: 30rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.82);
}

.metric-status {
  font-size: 28rpx;
  color: #20a85e;
  font-weight: 800;
}

.metric-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.72);
  line-height: 42rpx;
  white-space: pre-wrap;
}

.tag-row {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(32, 168, 94, 0.12);
  border: 2rpx solid rgba(32, 168, 94, 0.22);
  color: #1a8a50;
  font-size: 26rpx;
}

.qa-title {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 900;
  color: rgba(0, 0, 0, 0.8);
}

.qa-title:first-child {
  margin-top: 0;
}

.qa-text {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.72);
  line-height: 42rpx;
  white-space: pre-wrap;
}

.linechart {
  background: #ffffff;
  border-radius: 26rpx;
  margin-bottom: 14rpx;
}

.audio-list {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 16rpx;
  margin-bottom: 14rpx;
}

.audio-title {
  font-size: 30rpx;
  font-weight: 900;
  color: rgba(0, 0, 0, 0.82);
  margin-bottom: 12rpx;
}

.audio-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}

.audio-item:last-child {
  border-bottom: none;
}

.audio-play {
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: rgba(32, 168, 94, 0.12);
  color: #1a8a50;
  border: 2rpx solid rgba(32, 168, 94, 0.22);
}

.audio-meta {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.chat-view {
  padding-top: 10rpx;
}

.row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 18rpx;
}

.row.left {
  justify-content: flex-start;
}

.row.right {
  justify-content: flex-end;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.avatar-customer {
  background: rgba(255, 255, 255, 0.25);
  color: #ffffff;
}

.avatar-beautician {
  background: rgba(0, 0, 0, 0.18);
  color: #ffffff;
}

.bubble {
  max-width: 560rpx;
  border-radius: 22rpx;
  padding: 18rpx 18rpx 14rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.bubble-customer {
  background: #c9f3d0;
}

.bubble-beautician {
  background: #ffffff;
}

.voice {
  margin-bottom: 10rpx;
}

.voice-bar {
  align-self: flex-start;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(0, 0, 0, 0.06);
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
}

.voice-label {
  font-size: 26rpx;
  color: #0e3c20;
}

.voice-dur {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.msg-text {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.86);
  line-height: 44rpx;
  white-space: pre-wrap;
}

.bottom-space {
  height: 120rpx;
}

.cta {
  padding: 14rpx 16rpx calc(14rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.94);
}

.again-btn {
  width: 100%;
  border-radius: 999rpx;
  background: #20a85e;
  color: #ffffff;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

