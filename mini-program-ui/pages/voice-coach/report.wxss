@import "theme.wxss";

.page {
  min-height: 100vh;
  background-color: var(--vc-bg);
  background-image:
    radial-gradient(120% 100% at 0% 0%, rgba(229, 211, 179, 0.16) 0%, rgba(5, 5, 7, 0) 60%),
    radial-gradient(130% 100% at 100% 8%, rgba(149, 236, 105, 0.07) 0%, rgba(5, 5, 7, 0) 60%),
    linear-gradient(180deg, #050507 0%, #0a0a0e 55%, #050507 100%);
  display: flex;
  flex-direction: column;
}

.seg {
  margin: 18rpx auto 10rpx;
  background: rgba(21, 21, 29, 0.86);
  border: 1rpx solid var(--vc-border);
  border-radius: 999rpx;
  padding: 6rpx;
  display: flex;
  width: 320rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  color: var(--vc-text-muted);
  font-size: 28rpx;
  padding: 10rpx 0;
  border-radius: 999rpx;
}

.seg-item.active {
  background: #ffffff;
  color: #1a1510;
  font-weight: 800;
}

.content {
  flex: 1;
  padding: 0 18rpx;
}

.headline {
  color: var(--vc-text);
  font-size: 34rpx;
  font-weight: 800;
  padding: 16rpx 6rpx;
}

.score-card {
  background: rgba(21, 21, 29, 0.94);
  border: 1rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 18rpx 16rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
  box-shadow: 0 16rpx 42rpx rgba(0, 0, 0, 0.32);
}

.score-left {
  flex: 1;
}

.score-label {
  font-size: 26rpx;
  color: var(--vc-text-muted);
}

.score-line {
  margin-top: 6rpx;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.score {
  font-size: 64rpx;
  font-weight: 900;
  color: var(--vc-success);
  line-height: 1;
}

.score-suffix {
  font-size: 26rpx;
  color: var(--vc-text-muted);
}

.radar {
  width: 280px;
  height: 280px;
}

.dims {
  margin-top: 14rpx;
  background: rgba(21, 21, 29, 0.94);
  border: 1rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 16rpx;
}

.dim-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(229, 211, 179, 0.12);
}

.dim-row:last-child {
  border-bottom: none;
}

.dim-name {
  font-size: 28rpx;
  color: var(--vc-text);
  font-weight: 700;
}

.dim-stars {
  font-size: 26rpx;
  color: #f6c76f;
}

.summary {
  margin-top: 14rpx;
  background: rgba(21, 21, 29, 0.92);
  border: 1rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 14rpx 16rpx;
}

.summary-line {
  font-size: 28rpx;
  color: var(--vc-text);
  line-height: 42rpx;
  margin-bottom: 10rpx;
}

.summary-line:last-child {
  margin-bottom: 0;
}

.tabs {
  margin-top: 14rpx;
  white-space: nowrap;
}

.tab {
  display: inline-block;
  padding: 14rpx 18rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  background: rgba(21, 21, 29, 0.86);
  border: 1rpx solid var(--vc-border);
  color: var(--vc-text-muted);
  font-size: 28rpx;
}

.tab.active {
  background: #ffffff;
  color: #1a1510;
  border-color: #ffffff;
  font-weight: 800;
}

.tab-body {
  margin-top: 12rpx;
}

.tab-title {
  padding: 6rpx 6rpx 10rpx;
  font-size: 34rpx;
  font-weight: 900;
  color: var(--vc-gold);
}

.metric-card,
.qa-card {
  background: rgba(21, 21, 29, 0.94);
  border: 1rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 16rpx;
  margin-bottom: 14rpx;
}

.metric-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.metric-name {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--vc-text);
}

.metric-status {
  font-size: 28rpx;
  color: var(--vc-success);
  font-weight: 800;
}

.metric-text {
  font-size: 28rpx;
  color: var(--vc-text-muted);
  line-height: 42rpx;
  white-space: pre-wrap;
}

.tag-row {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(149, 236, 105, 0.1);
  border: 1rpx solid rgba(149, 236, 105, 0.28);
  color: #b9f39c;
  font-size: 26rpx;
}

.qa-title {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 900;
  color: var(--vc-gold);
}

.qa-title:first-child {
  margin-top: 0;
}

.qa-text {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: var(--vc-text);
  line-height: 42rpx;
  white-space: pre-wrap;
}

.linechart {
  background: rgba(21, 21, 29, 0.94);
  border: 1rpx solid var(--vc-border);
  border-radius: 26rpx;
  margin-bottom: 14rpx;
}

.audio-list {
  background: rgba(21, 21, 29, 0.94);
  border: 1rpx solid var(--vc-border);
  border-radius: 26rpx;
  padding: 16rpx;
  margin-bottom: 14rpx;
}

.audio-title {
  font-size: 30rpx;
  font-weight: 900;
  color: var(--vc-text);
  margin-bottom: 12rpx;
}

.audio-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(229, 211, 179, 0.12);
}

.audio-item:last-child {
  border-bottom: none;
}

.audio-play {
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: rgba(149, 236, 105, 0.12);
  color: #b9f39c;
  border: 1rpx solid rgba(149, 236, 105, 0.32);
}

.audio-meta {
  font-size: 26rpx;
  color: var(--vc-text-muted);
}

/* Report -> dialog replay */
.chat-view {
  padding-top: 10rpx;
}

.row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 18rpx;
}

.row.left {
  justify-content: flex-start;
}

.row.right {
  justify-content: flex-end;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.avatar-customer {
  background: rgba(255, 255, 255, 0.12);
  color: var(--vc-text);
}

.avatar-beautician {
  background: rgba(149, 236, 105, 0.22);
  color: var(--vc-success);
}

.bubble {
  max-width: 560rpx;
  border-radius: 22rpx;
  padding: 18rpx 18rpx 14rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.26);
}

.bubble-customer {
  background: var(--vc-bubble-other);
}

.bubble-beautician {
  background: var(--vc-bubble-self);
}

.voice {
  margin-bottom: 10rpx;
}

.voice-bar {
  align-self: flex-start;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(0, 0, 0, 0.16);
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
}

.voice-label,
.voice-dur {
  font-size: 26rpx;
}

.bubble-customer .voice-label,
.bubble-customer .voice-dur,
.bubble-customer .msg-text {
  color: var(--vc-bubble-other-text);
}

.bubble-beautician .voice-label,
.bubble-beautician .voice-dur,
.bubble-beautician .msg-text {
  color: var(--vc-bubble-self-text);
}

.msg-text {
  font-size: 30rpx;
  line-height: 44rpx;
  white-space: pre-wrap;
}

.bottom-space {
  height: 120rpx;
}

.cta {
  padding: 14rpx 16rpx calc(14rpx + env(safe-area-inset-bottom));
  background: rgba(10, 10, 14, 0.94);
  border-top: 1rpx solid var(--vc-border);
}

.again-btn {
  width: 100%;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #dcc7a6 0%, #f1e3c6 50%, #c1a076 100%);
  color: #1a1510;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}
