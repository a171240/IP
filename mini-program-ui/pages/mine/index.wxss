
.profile-card {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.profile-card > view,
.profile-card > text,
.profile-card > image,
.profile-card > button {
  margin-top: 12rpx;
}

.profile-card > view:first-child,
.profile-card > text:first-child,
.profile-card > image:first-child,
.profile-card > button:first-child {
  margin-top: 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 1px solid rgba(229, 211, 179, 0.35);
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.45);
}

.profile-info {
  display: flex;
  flex-direction: column;
}

.profile-info text {
  display: block;
}

.profile-info text + text {
  margin-top: 6rpx;
}
